<?xml version="1.0"?>
<!-- Koch v1.1 Hybrid Writing Arm - 6-DOF -->
<!-- Based on working 4-DOF pattern, extended to 6 joints -->
<robot name="koch_v11_writing_arm">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
      <material name="black">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint 1: Shoulder Pan (Base Rotation) - XL430 -->
  <joint name="shoulder_pan" type="revolute">
    <parent link="base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0 0 0.02" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="2.0" velocity="3.14"/>
  </joint>

  <link name="shoulder_link">
    <visual>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.04"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint 2: Shoulder Lift (Vertical) - XL430 -->
  <joint name="shoulder_lift" type="revolute">
    <parent link="shoulder_link"/>
    <child link="upper_arm_link"/>
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.0" upper="2.0" effort="2.0" velocity="3.14"/>
  </joint>

  <link name="upper_arm_link">
    <visual>
      <origin xyz="0.10 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.20"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.4 0.8 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint 3: Elbow Flex - XL330 -->
  <joint name="elbow_flex" type="revolute">
    <parent link="upper_arm_link"/>
    <child link="forearm_link"/>
    <origin xyz="0.20 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.5" upper="2.5" effort="1.5" velocity="3.14"/>
  </joint>

  <link name="forearm_link">
    <visual>
      <origin xyz="0.08 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.012" length="0.16"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.4 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.15"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0005"/>
    </inertial>
  </link>

  <!-- Joint 4: Wrist Flex - XL330 -->
  <joint name="wrist_flex" type="revolute">
    <parent link="forearm_link"/>
    <child link="wrist_link"/>
    <origin xyz="0.16 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.0" upper="2.0" effort="1.5" velocity="3.14"/>
  </joint>

  <link name="wrist_link">
    <visual>
      <origin xyz="0.025 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.05"/>
      </geometry>
      <material name="orange">
        <color rgba="0.9 0.5 0.2 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0002" ixy="0.0" ixz="0.0" iyy="0.0002" iyz="0.0" izz="0.0002"/>
    </inertial>
  </link>

  <!-- Joint 5: Wrist Roll - XL330 -->
  <joint name="wrist_roll" type="revolute">
    <parent link="wrist_link"/>
    <child link="hand_link"/>
    <origin xyz="0.05 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-3.14159" upper="3.14159" effort="1.0" velocity="3.14"/>
  </joint>

  <link name="hand_link">
    <visual>
      <origin xyz="0.05 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.008" length="0.10"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0.2 0.2 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.08"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Joint 6: Pen Holder (Gripper) - XL330 -->
  <joint name="pen_holder" type="revolute">
    <parent link="hand_link"/>
    <child link="pen_link"/>
    <origin xyz="0.10 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.5" upper="0.5" effort="0.5" velocity="1.57"/>
  </joint>

  <link name="pen_link">
    <visual>
      <origin xyz="0.025 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.005" length="0.05"/>
      </geometry>
      <material name="purple">
        <color rgba="0.6 0.2 0.8 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.02"/>
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- Pen Tip (Fixed) -->
  <joint name="pen_tip_joint" type="fixed">
    <parent link="pen_link"/>
    <child link="pen_tip"/>
    <origin xyz="0.05 0 0" rpy="0 0 0"/>
  </joint>

  <link name="pen_tip">
    <visual>
      <geometry>
        <sphere radius="0.003"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
  </link>

  <!-- ROS2 Control - Following working 4-DOF pattern -->
  <ros2_control name="koch_v11_system" type="system">
    
    <!-- For simulation, use mock hardware -->
    <hardware>
      <plugin>mock_components/GenericSystem</plugin>
    </hardware>
    
    <!-- Joint 1: shoulder_pan -->
    <joint name="shoulder_pan">
      <command_interface name="position">
        <param name="min">-3.14159</param>
        <param name="max">3.14159</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <!-- Joint 2: shoulder_lift -->
    <joint name="shoulder_lift">
      <command_interface name="position">
        <param name="min">-2.0</param>
        <param name="max">2.0</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <!-- Joint 3: elbow_flex -->
    <joint name="elbow_flex">
      <command_interface name="position">
        <param name="min">-2.5</param>
        <param name="max">2.5</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">-1.5</param>
      </state_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <!-- Joint 4: wrist_flex -->
    <joint name="wrist_flex">
      <command_interface name="position">
        <param name="min">-2.0</param>
        <param name="max">2.0</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">1.5</param>
      </state_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <!-- Joint 5: wrist_roll -->
    <joint name="wrist_roll">
      <command_interface name="position">
        <param name="min">-3.14159</param>
        <param name="max">3.14159</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <!-- Joint 6: pen_holder -->
    <joint name="pen_holder">
      <command_interface name="position">
        <param name="min">-0.5</param>
        <param name="max">0.5</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
  </ros2_control>

</robot>
