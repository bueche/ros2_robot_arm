<?xml version="1.0"?>
<robot name="koch_v11_writing_arm">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
      <material name="black">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint 1: Shoulder Pan (Base Rotation) - XL430 -->
  <joint name="joint_1" type="revolute">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="3.0" velocity="3.0"/>
  </joint>

  <link name="link_1">
    <visual>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.04"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Joint 2: Shoulder Lift - XL430 -->
  <joint name="joint_2" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.0" upper="2.0" effort="3.0" velocity="3.0"/>
  </joint>

  <link name="link_2">
    <visual>
      <origin xyz="0.10 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.20"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.4 0.8 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.10 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.20"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.10 0 0"/>
      <mass value="0.3"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Joint 3: Elbow Flex - XL330 -->
  <joint name="joint_3" type="revolute">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="0.20 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.5" upper="2.5" effort="2.0" velocity="3.0"/>
  </joint>

  <link name="link_3">
    <visual>
      <origin xyz="0.08 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.16"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.4 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.08 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.16"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.08 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Joint 4: Wrist Flex - XL330 -->
  <joint name="joint_4" type="revolute">
    <parent link="link_3"/>
    <child link="link_4"/>
    <origin xyz="0.16 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.0" upper="2.0" effort="2.0" velocity="3.0"/>
  </joint>

  <link name="link_4">
    <visual>
      <origin xyz="0.03 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.06"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.03 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.03 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- Joint 5: Wrist Roll - XL330 -->
  <joint name="joint_5" type="revolute">
    <parent link="link_4"/>
    <child link="link_5"/>
    <origin xyz="0.06 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-3.14159" upper="3.14159" effort="1.0" velocity="3.0"/>
  </joint>

  <link name="link_5">
    <visual>
      <origin xyz="0.03 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.008" length="0.06"/>
      </geometry>
      <material name="yellow">
        <color rgba="0.8 0.8 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.03 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.008" length="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.03 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.00005" ixy="0.0" ixz="0.0" iyy="0.00005" iyz="0.0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- Joint 6: Pen Holder (Gripper) - XL330 -->
  <joint name="joint_6" type="revolute">
    <parent link="link_5"/>
    <child link="pen_link"/>
    <origin xyz="0.06 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.5" upper="0.5" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="pen_link">
    <visual>
      <origin xyz="0.03 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.005" length="0.06"/>
      </geometry>
      <material name="pen_color">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.03 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.005" length="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.03 0 0"/>
      <mass value="0.02"/>
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.000001"/>
    </inertial>
  </link>

  <!-- Pen Tip (for visualization and tracking) -->
  <joint name="pen_tip_joint" type="fixed">
    <parent link="pen_link"/>
    <child link="pen_tip"/>
    <origin xyz="0.06 0 0" rpy="0 0 0"/>
  </joint>

  <link name="pen_tip">
    <visual>
      <geometry>
        <sphere radius="0.003"/>
      </geometry>
      <material name="tip_color">
        <color rgba="1.0 0.0 0.0 1"/>
      </material>
    </visual>
  </link>

  <!-- ROS2 Control Integration - FOLLOWING WORKING 4-DOF PATTERN -->
  <ros2_control name="koch_v11_system" type="system">
    
    <!-- For simulation, use mock hardware -->
    <hardware>
      <plugin>mock_components/GenericSystem</plugin>
    </hardware>
    
    <!-- Joint 1: Shoulder Pan -->
    <joint name="joint_1">
      <command_interface name="position">
        <param name="min">-3.14159</param>
        <param name="max">3.14159</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
    </joint>
    
    <!-- Joint 2: Shoulder Lift -->
    <joint name="joint_2">
      <command_interface name="position">
        <param name="min">-2.0</param>
        <param name="max">2.0</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
    </joint>
    
    <!-- Joint 3: Elbow Flex -->
    <joint name="joint_3">
      <command_interface name="position">
        <param name="min">-2.5</param>
        <param name="max">2.5</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">-1.5</param>
      </state_interface>
      <state_interface name="velocity"/>
    </joint>
    
    <!-- Joint 4: Wrist Flex -->
    <joint name="joint_4">
      <command_interface name="position">
        <param name="min">-2.0</param>
        <param name="max">2.0</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">1.5</param>
      </state_interface>
      <state_interface name="velocity"/>
    </joint>
    
    <!-- Joint 5: Wrist Roll -->
    <joint name="joint_5">
      <command_interface name="position">
        <param name="min">-3.14159</param>
        <param name="max">3.14159</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
    </joint>
    
    <!-- Joint 6: Pen Holder -->
    <joint name="joint_6">
      <command_interface name="position">
        <param name="min">-0.5</param>
        <param name="max">0.5</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
    </joint>
    
  </ros2_control>

</robot>
